extends layout.pug
block head
  title timeline
  script(src="/notify.js")
block content
  #timeline.row
    .col-md-6.col-md-offset-3
      form(v-on:submit="postToot")
        .form-group.pull-right
          input.btn.btn-primary.btn-lg(type="submit" value="送信" required)
        .form-group
          input.panel.panel-default.panel-body(v-model="newToot.body" placeholder="メッセージ" required)
      #toots
          .media.panel.panel-default.panel-body(v-for="toot in toots")
            .media-body
              .pull-right
                button.btn.btn-danger.btn-xs(v-on:click="deleteToot($event,toot.id)")
                  id.glyphicon.glyphicon-trash
              | {{ toot.body }} 
