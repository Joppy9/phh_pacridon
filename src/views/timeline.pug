extends layout.pug
block head
  //-link(rel="stylesheet" href="/styles/login.css")
  title Pacridon
block content
  #timeline.row
    .col-md-6.col-md-offset-3
      form(v-on:submit="postToot")
        .form-group.pull-right
          input.btn.btn-primary.btn-lg(type="submit" value="toot!" required)
        .form-group
          textarea.panel.panel-default.panel-body(v-model="newToot.body" placeholder="今何してる？" style={"width": "478px","height": "90px"} required)
      #toots
          .media.panel.panel-default.panel-body(v-for="toot in toots")
            .media-body
              .pull-right
                button.btn.btn-danger.btn-xs(v-on:click="deleteToot($event,toot.id)")
                  id.glyphicon.glyphicon-trash
              | {{ toot.body }} 